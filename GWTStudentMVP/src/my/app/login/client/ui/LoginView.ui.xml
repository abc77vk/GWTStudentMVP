<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.login {
			margin: 10px;
			text-align: center;
		}
		.gwt-Button {
			margin: auto;

		}
	</ui:style>
	<g:HTMLPanel>
		<g:Grid ui:field="loginTable" styleName="{style.login}">
			<g:row>
				<g:customCell>
					<g:Label text="Login" ui:field="loginLable"/>
				</g:customCell>
				<g:customCell>
					<g:TextBox styleName="{style.login}" ui:field="loginInput"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="Password" ui:field="passwordLable"/>
				</g:customCell>
				<g:customCell>
					<g:PasswordTextBox ui:field="passwordInput"/>
				</g:customCell>
			</g:row>
		</g:Grid>
		<g:Button text="Login" ui:field="loginButton"/>
		<g:Button ui:field="registrationButton" text="Registration"/>
		<g:Label ui:field="output"/>
	</g:HTMLPanel>
</ui:UiBinder> 